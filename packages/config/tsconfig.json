{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "lib": ["es6", "es5", "esnext", "dom"],
    "baseUrl": "./",
    "strict": true,
    "jsx": "react",
    "sourceMap": false,
    "declaration": true,
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "pretty": true,
    "outDir": "tsc-dist",
    "types": ["@types/node", "@types/chai", "@types/mocha", "@types/webpack", "@types/webpack-env", "@types/jsdom"],
    "typeRoots": ["types", "config/types", "libs/types", "node_modules/@types"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "esModuleInterop": true
    }
  },
  "exclude": ["node_modules", "tests", "docs", "dist", "tsc-dist", ".history"]
}
