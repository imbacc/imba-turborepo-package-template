{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "lib": [
      "es6",
      "es5",
      "ESNext",
      "dom"
    ],
    "baseUrl": "./",
    "strict": true,
    "jsx": "react",
    "sourceMap": false,
    "declaration": true,
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "importHelpers": true,
    "pretty": true,
    "outDir": "tsc-dist",
    "typeRoots": ["types", "libs/types", "node_modules/@types", "node_modules/@dcloudio/types"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "esModuleInterop": true
    }
  },
  "exclude": ["node_modules", "tests", "docs", "dist", "tsc-dist", ".history"]
}
