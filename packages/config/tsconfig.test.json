{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "lib": ["es6", "es5", "esnext", "dom"],
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "removeComments": false,
    "noImplicitAny": false,
    "pretty": true,
    "outDir": "test-dist",
    "types": ["@types/node", "@types/chai", "@types/mocha", "@types/webpack", "@types/webpack-env", "@types/jsdom"],
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules", "docs", "dist", ".history"],
  "ts-node": {
    "module": "commonjs",
    "esm": true,
    "transpileOnly": true,
    "files": true,
    "esModuleInterop": true,
  }
}
